extends layout
block content
      .site-wrapper
          .site-wrapper-inner
              .cover-container
                  .masthead.clearfix
                      .inner
                          h3.masthead-brand
                              | Impressionist
                          nav
                              ul.nav.masthead-nav
                                  li.active
                                      a
                                          | Home
                                  li
                                      a
                                          | Game
                                  li
                                      a
                                          | Stats
                  #home.inner.cover
                      h1.cover-heading
                          | Welcome to Impressionist
                      p.lead
                          | This is a collaborative game to test your knowledge about shapes
                      #entry.btn.btn-lg.btn-default
                          | Try it out
                  #wait.inner.cover
                      p.lead
                          | Waiting for another player...
                  #continue.inner.cover
                      #continue_btn.btn.btn-lg.btn-default
                          | Continue
                  #game
                      //#menu
                      //    .button.mouse-look
                      //      | Enable Mouse Look
                      //    .button.full-screen
                      //      | Start VR Mode
                      #menu
                          #bar
                          #timebar
                          #time
                              | T
                          #score
                              | 0
                          #select
                              | S
                          input(id='guessinput', type='text', value='your guess', name='guessinput', onfocus="if(this.value=='your guess') {this.value='';}", onblur="if(this.value=='') {this.value='your guess';}")
                          #guessoutput
                      #model(tabindex='0')
                  #stat
                      #objlist
                      #comp_model1(tabindex='0')
                      #comp_model2(tabindex='0')
                  .mastfoot
                      .inner
                          #numPlayer
                          p
